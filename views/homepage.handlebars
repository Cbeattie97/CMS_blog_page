{{#each posts}}
  <div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <p>Posted by {{this.user.username}} on {{this.createdAt}}</p>
  </div>
{{/each}}

{{#if loggedIn}}
  <a href="/dashboard">Go to Dashboard</a>
{{else}}
  <a href="/login">Login</a> or <a href="/signup">Sign up</a>
{{/if}}
